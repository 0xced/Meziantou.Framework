    <Version>1.2.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <Compile Update="ByteSize.Generated.cs">
      <DependentUpon>ByteSize.Generated.tt</DependentUpon>
      <DesignTime>True</DesignTime>
